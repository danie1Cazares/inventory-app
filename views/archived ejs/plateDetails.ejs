<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="styles.css" rel="stylesheet">

    <title><%= title %> </title>
</head>
<body>

    <a href="/">Home</a>

    <h1> <%= title %> </h1>

    <% itemDetails.map((plates) => { %>

        <% if (editMode === 'true') { %>
            <p>show input/edit mode: <%= editMode %></p>
        
            <form action="/plates/<%= plates.id %>/update" method="post">
                
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value='<%= plates.name %>' required />

                <label for="category">Category:</label>
                <input type="text" id="category" name="category" value='<%= plates.category %>' required />

                <label for="plate-type">Plate type:</label>
                <input type="text" id="plate-type" name="plate-type" required />

                <span>Unit of Measurement: </span>
                <label for="uom">LB</label>
                <input type="radio" id="uom" name="uom" value="lb" />
                <label for="uom">KG</label>
                <input type="radio" id="uom" name="uom" value="kg" />        

                <label for="rating">Select rating:</label> 
                <input type="number" id="rating" name="rating" step=".1" value='<%= plates.rating %>' required />

                <label for="brand">Select brand:</label>
                <select name="brand" id="brand">
                    <option value="1">Rogue</option>
                    <option value="2">Ghost</option>
                    <option value="3" >Oso</option>
                    <option value="4">Kabuki Strength</option>
                    <option value="5">York</option>
                </select><br>

            
                <button type="submit">Submit Changes</button>
            </form>
                        
            <form action="/plates/<%= plates.id %>?editMode=false" method="post">
                <button type="submit">Cancel</button>
            </form>

        <% } else { %>
            <p> HIDE INPUT/edit mode: <%= editMode %></p>
            <p>HIDING INPUT FIELDS</p>

            <p><%= plates.name %></p> 
            <p><%= plates.category %></p> 
            <p><%= plates.plate_type %></p> 
            <p><%= plates.unit_of_measure %></p> 
            <p><%= plates.rating %></p> 
            <p>Brand ID: <%= plates.brand_id %></p> 
                

            <form action="/plates/<%= plates.id %>?editMode=true" method="post">
                <button type="submit">Edit Mode</button>
            </form>


        <% } %>

        <form action="/delete?table=plates&id=<%= plates.id %>" method="post" >
                            <button disabled type="submit">Delete Item</button>

        </form>
                      
        




    <% }) %> 




    


</body>
</html>